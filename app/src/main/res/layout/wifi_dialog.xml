<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/green_corner_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Setup Wifi"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_marginStart="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_gravity="center_horizontal"
            app:lottie_fileName="wifi.json" />
    </LinearLayout>
    <EditText
        android:id="@+id/ssid"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:hint="SSID..."
        android:layout_marginStart="30dp"
        android:background="@drawable/edit_text_border"
        android:padding="8dp"
        android:layout_marginEnd="30dp"
        android:paddingStart="15dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:drawableLeft="@drawable/wifi_password"
        android:id="@+id/password"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_width="match_parent"
        android:background="@drawable/edit_text_border"
        android:hint="Password..."
        android:drawablePadding="13dp"
        android:paddingStart="5dp"
        android:layout_marginEnd="30dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:weightSum="2"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="Cancel"
            style="@style/cancel"
            android:background="@drawable/btn_background_dialog"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/save"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            style="@style/green_btn"
            android:background="@drawable/btn_background_dialog"
            android:layout_width="wrap_content"
            android:text="Save"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>