<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="detailDeviceViewModel"
            type="com.project.smartfrigde.viewmodel.DetailDeviceViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="8"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:layout_weight="3"

                android:background="@drawable/auto_complete_text_view_border"
                android:layout_width="0dp"
                android:text="@={detailDeviceViewModel.food_name}"
                android:maxLines="1"
                android:layout_height="wrap_content"/>
            <AutoCompleteTextView
                android:layout_weight="2"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:maxLines="1"
                android:background="@drawable/auto_complete_text_view_border"
                android:layout_width="0dp"
                android:text="@={detailDeviceViewModel.unit}"
                android:layout_height="wrap_content"/>
            <AutoCompleteTextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:padding="5dp"
                android:maxLines="1"
                android:background="@drawable/auto_complete_text_view_border"
                android:layout_width="0dp"
                android:text="@={detailDeviceViewModel.expired_date}"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>