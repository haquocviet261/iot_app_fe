<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="homeViewModel"
            type="com.project.smartfrigde.viewmodel.HomeViewmodel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.HomeFragment">
    <androidx.cardview.widget.CardView
        android:elevation="12dp"
        android:id="@+id/group_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/user_name"
                android:layout_marginStart="5dp"
                android:layout_weight="8"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/green_background"
                android:text="User name here"
                android:layout_height="wrap_content"/>
            <include
                android:layout_weight="1"
                android:id="@+id/notification"
                android:onClick="@{() -> homeViewModel.viewNotification()}"
                android:layout_width="wrap_content"
                layout="@layout/custom_notification_icon"
                android:layout_height="wrap_content"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="30dp"
                android:layout_height="60dp"
                app:lottie_autoPlay="true"
                android:onClick="@{() -> homeViewModel.chatNow()}"
                android:layout_weight="1"
                app:lottie_loop="true"
                android:layout_gravity="center_horizontal"
                app:lottie_fileName="bot_chat_icon.json" />

            <ImageButton
                android:padding="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_weight="1"
                android:onClick="@{() -> homeViewModel.addDvice()}"
                android:src="@drawable/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:paddingStart="15dp"
        android:layout_below="@id/group_header"
        android:id="@+id/device_label"
        android:text="My device"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/add_device"
        android:layout_below="@id/list_device"
        app:cardCornerRadius="15dp"
        android:visibility="@{homeViewModel.is_device_exist == View.VISIBLE ? View.GONE : View.VISIBLE}"
        android:onClick="@{() -> homeViewModel.addDvice()}"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_marginTop="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_weight="1"
                android:onClick="@{() -> homeViewModel.addDvice()}"
                android:src="@drawable/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:onClick="@{() -> homeViewModel.addDvice()}"
                android:text="Add device"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/list_device"
        android:visibility="@{homeViewModel.is_device_exist}"
        android:layout_below="@id/device_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
</layout>